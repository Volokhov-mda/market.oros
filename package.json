{
  "private": true,
  "name": "market.orosdigital.agency",
  "version": "1.1.0",
  "scripts": {
    "build": "NODE_ENV=production preact build --no-sw --brotli --no-inline-css --no-prerender && echo '/* /index.html  200' | cat >build/_redirects",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^3.0.0",
    "eslint": "^7.23.0",
    "eslint-config-preact": "^1.1.0",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "preact-cli": "^3.0.0",
    "preact-cli-plugin-env-vars": "^1.2.1",
    "sirv-cli": "1.0.11"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.0.0",
    "clsx": "^1.1.1",
    "crypto-random-string": "^4.0.0",
    "flag-icon-css": "^4.1.5",
    "jotai": "^0.16.0",
    "notyf": "^3.9.0",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "react-beautiful-dnd": "^13.1.0",
    "react-cool-img": "^1.2.9",
    "react-external-link": "^1.2.1",
    "react-fetching-library": "^1.7.6",
    "react-hook-form": "^7.0.3",
    "react-image-fade-in": "^1.1.3",
    "react-promise-tracker": "^2.1.0",
    "sweetalert2": "^10.16.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
